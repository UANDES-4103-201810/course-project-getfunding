






<h1>Wishlists</h1>


<div class="album py-5 album-transparent">
  <div class="container">
    <div class="row">
    <% @wishlists.each do |wishlist| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow" style="border-radius: 25px">
          <h1><%= wishlist.Project.name %></h1>
        <% if Image.find_by(Project_id: wishlist.Project.id) != nil %>
          <%= image_tag Image.find_by(Project_id: wishlist.Project.id).avatar.url, :class=> "card-img-top" %>
        <% end%>
        <div class="card-body">
            <h3>Goal</h3>
            <p class="card-text"><%= wishlist.Project.goal %></p>
            <h3>Colected</h3>
            <p class="card-text"><%= wishlist.Project.money_colected %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <% if user_signed_in? %>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', wishlist.Project %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_project_path(wishlist) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', wishlist, method: :delete, data: {confirm: 'Are you sure?'} %></button>
                <% else %>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', wishlist %></button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%end%>
    </div>
    </div>
    </div>










