<p id="notice"><%= notice %></p>
<a type="button" class="btn btn-sm btn-outline-secondary" style=" background-color: cornflowerblue; margin: 5px; border-radius: 25px"  href="/projects/new">New project</a>
<a type="button" class="btn btn-sm btn-outline-secondary" style=" background-color: cornflowerblue; margin: 5px; border-radius: 25px"  href="/categories">Search by category</a>
<% if user_signed_in? %>
  <a type="button" class="btn btn-sm btn-outline-secondary" style=" background-color: cornflowerblue; margin: 5px; border-radius: 25px"  href="/wishlists">Wishlist</a>
<% end %>

<div class="album py-5 album-transparent">
      <div class="container">
        <div class="row">
          <% @projects.each do |project| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow" style="border-radius: 25px">
              <h1><%= project.name %></h1>
              <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp; text=Falcon Heavy" alt="cohete feed" style="height: 225px; width: 100%; display: block;" src="/assets/cohete.jpg">
              <div class="card-body">
                <h3>Goal</h3>
                <p class="card-text"><%= project.goal %></p>
                <h3>Colected</h3>
                <p class="card-text"><%= project.money_colected %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <% if (user_signed_in? && project.User_id == current_user.id) || session[:admin]%>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', project %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_project_path(project) %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                    <%else%>
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', project %></button>
                    <%end%>
                      </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>

      </div>
</div>


