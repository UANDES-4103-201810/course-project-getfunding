<table>
  <thead>
    <tr>

      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptive_pages.each do |descriptive_page| %>
      <tr>
        <td><%= descriptive_page.link %></td>
