<div class=col-6>




  <% if session[:admin] %>


  <h1>User</h1>

  <table class = "table table-hover -bordered">
    <thead>
    <tr>

      <th>Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><button type="button" class="btn btn-sm btn-outline-secondary"> <%= link_to 'Make admin',  admin_sees_user_make_admin_path(id: user.id) %> </button>
        <td><button type="button" class="btn btn-sm btn-outline-secondary"> <%= link_to 'Destroy',  admin_sees_user_destroy_path(id: user.id) %> </button>

        </td>



    <% end %>
    </tbody>
  </table>

  <br>
</div>

<% end %>
