<div class=col-6>




  <p id="notice"><%= notice %></p>

  <h1>User</h1>

  <table class = "table table-hover -bordered">
    <thead>
    <tr>

      <th>Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><button type="button" class="btn btn-sm btn-outline-secondary"> <%= link_to 'admin', admin_sees_user_make_admin_path, method: :make_admin %> <% session[:target] = user.id %>  </button></td>



    <% end %>
    </tbody>
  </table>

  <br>
</div>